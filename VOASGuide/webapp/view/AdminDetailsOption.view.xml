<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.toyota-canada.vehiclesGuideV3.controller.AdminDetailsOption"
	xmlns:uxap="sap.uxap" xmlns="sap.m">
	<uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="false"
		class="sapUiSizeCompact">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectTitle="{modelDetail>/moYear} {modelDetail>/brand} {modelDetail>/series}" objectSubtitle="" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true"
				isObjectSubtitleAlwaysVisible="true" showPlaceholder="true"> <!--objectImageURI="/build/uilibraries/content/static/image-canvas.svg"-->
				<uxap:navigationBar>
					<Bar>
						<contentLeft>
							<Button type="Back" press="_onFioriObjectPageHeaderPress"/>
						</contentLeft>
						<contentMiddle>
							<Title text="{i18n>ManageVehicleSeriesDetails}"/>
						</contentMiddle>
						<contentRight/>
					</Bar>
				</uxap:navigationBar>
				<uxap:actions>
					<Button text="{i18n>CreateVehicleGuide}" icon="sap-icon://pdf-attachment" iconFirst="false" type="Default" enabled="true"
						press="_createVehGuidePDF">
						<layoutData>
							<OverflowToolbarLayoutData moveToOverflow="true"/>
						</layoutData>
					</Button>
				</uxap:actions>
				<uxap:breadCrumbsLinks/>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:headerContent/>
		<uxap:sections>
			<uxap:ObjectPageSection title="What's New">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="{i18n>WhatsNew}">
						<uxap:blocks>
							<Table id="whatsNewTbl" width="100%" growing="false" growingScrollToLoad="true" growingThreshold="2" mode="SingleSelectLeft"
								items="{path:'whatsNewTblModel>/', templateShareable:true}">
								<headerToolbar>
									<OverflowToolbar design="Transparent">
										<content>
											<ToolbarSpacer/>
											<Button text="{i18n>Upload}" icon="sap-icon://write-new" iconFirst="true" type="Transparent" press="_uploadWhatNew">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
											<Button text="{i18n>Delete}" icon="sap-icon://delete" iconFirst="false" type="Transparent" press="_deleteWhatNew">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
										</content>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
										<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>FileName}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
										<header>
											<Text text="{i18n>Comments}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>LastUploaded}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>Language}" width="auto"/>
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Active">
										<cells>
											<Text text="{whatsNewTblModel>FileName}"/> 
											<Text text="{whatsNewTblModel>Comment}"/> 
											<Text text="{parts: [{path:'whatsNewTblModel>Lastupdate'},{path:'whatsNewTblModel>Lastupdate'}] , formatter: 'formatter.formatManagePageDate'}"  />
											<Text text="{whatsNewTblModel>Language}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Walk-up">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="{i18n>Walk-up}">
						<uxap:blocks>
							<Table id="walkUpTbl" width="100%" growing="false" growingScrollToLoad="true" growingThreshold="2" mode="SingleSelectLeft"
								items="{path:'walkUpTblModel>/', templateShareable:true}">
								<headerToolbar>
									<OverflowToolbar design="Transparent">
										<content>
											<ToolbarSpacer/>
											<Button text="{i18n>Upload}" icon="sap-icon://write-new" iconFirst="true" type="Transparent" press="_uploadFileWalkUp">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
											<Button text="{i18n>Delete}" icon="sap-icon://delete" iconFirst="false" type="Transparent" press="_deleteFileWalkUp">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
										</content>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
										<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>FileName}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
										<header>
											<Text text="{i18n>Comments}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>LastUploaded}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>Language}" width="auto"/>
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Active">
										<cells>
											<Text text="{walkUpTblModel>FileName}"/>
											<Text text="{walkUpTblModel>Comment}"/>
											<Text text="{parts: [{path:'walkUpTblModel>Lastupdate'},{path:'walkUpTblModel>Lastupdate'}] , formatter: 'formatter.formatManagePageDate'}"/>
											<Text text="{walkUpTblModel>Language}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Supplement Guide">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="{i18n>SupplementalGuide}">
						<uxap:blocks>
							<Table id="suppTbl" width="100%" growing="false" growingScrollToLoad="true" growingThreshold="2" mode="SingleSelectLeft"
								items="{path:'suppTblModel>/', templateShareable:true}">
								<headerToolbar>
									<OverflowToolbar design="Transparent">
										<content>
											<ToolbarSpacer/>
											<Button text="{i18n>Upload}" icon="sap-icon://write-new" iconFirst="true" type="Transparent" press="_uploadFileSupp">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
											<Button text="{i18n>Delete}" icon="sap-icon://delete" iconFirst="false" type="Transparent" press="_deleteFileSupp">
												<layoutData>
													<OverflowToolbarLayoutData moveToOverflow="true"/>
												</layoutData>
											</Button>
										</content>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>FileName}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Tablet" demandPopin="true">
										<header>
											<Text text="{i18n>Comments}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>LastUploaded}" width="auto"/>
										</header>
									</Column>
									<Column width="auto" minScreenWidth="Phone">
										<header>
											<Text text="{i18n>Language}" width="auto"/>
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Active">
										<cells>
											<Text text="{suppTblModel>FileName}"/>
											<Text text="{suppTblModel>Comment}"/>
											<Text text="{parts: [{path:'suppTblModel>Lastupdate'},{path:'suppTblModel>Lastupdate'}] , formatter: 'formatter.formatManagePageDate'}" />
											<Text text="{suppTblModel>Language}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>