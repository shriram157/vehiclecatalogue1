<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.toyota-canada.vehiclesGuideV3.controller.DetailsOption"
	xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:core="sap.ui.core">
	<uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="false"
		class="sapUiSizeCompact">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectTitle="{modelDetail>/moYear} {modelDetail>/brand} {modelDetail>/series} - See All Features"
				isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" showPlaceholder="true">
				<!--objectImageURI="/build/uilibraries/content/static/image-canvas.svg"-->
				<uxap:navigationBar>
					<Bar>
						<contentLeft>
							<Button type="Back" press="_onFioriObjectPageHeaderPress"/>
						</contentLeft>
						<contentMiddle>
							<Title text="Vehicle Details"/>
						</contentMiddle>
						<contentRight/>
					</Bar>
				</uxap:navigationBar>
				<uxap:actions> <!--	press="_onFioriObjectPageActionButtonPress"-->
					<Button text="Vehicle Guide" icon="sap-icon://pdf-attachment" iconFirst="true" type="Default" enabled="true"
						press="_onCreateVehGuide"/>
					<Button text="What's New Guide" icon="sap-icon://pdf-attachment" iconFirst="true" type="Default" enabled="true"
						press="_onCreateWhatsNew"/>
					<Button text="Walk-up Guide" icon="sap-icon://pdf-attachment" iconFirst="true" type="Default" enabled="true"
						press="_onCreateWalkUp"/>
					<Button text="Supplemental Guide" icon="sap-icon://pdf-attachment" iconFirst="true" type="Default" enabled="true"
						press="_onCreateSupplemental"/>
					<Button text="Pocket Summary" type="Default" icon="sap-icon://edit" iconFirst="true" enabled="true" visible="true"
						iconDensityAware="false" press="_onCreatePocSum"/>
					<Button text="Manage Series" icon="sap-icon://edit" iconFirst="true" type="Transparent" enabled="true"
						press="manageSeries"/>
				</uxap:actions>
				<uxap:breadCrumbsLinks/>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:headerContent>
			<VBox width="100%">
				<HBox class="justifyCenter">
					<VBox>
						<items>
							<Title text="{modelDetail>/ENModelDesc} - ({modelDetail>/model}) - SFX {modelDetail>/suffix}"/>
							<HBox>
								<items>
									<Label text="Model"/>
									<Label text=":" class="sapUiTinyMarginEnd"/>
									<!--	<ObjectStatus text="{modelDetail>/model}"/>-->
									<ObjectStatus text="{modelDetail>/ENModelDesc}"/>
								</items>
							</HBox>
							<HBox>
								<items>
									<!--<Label text="MSRP"/>
							<Label text=":" class="sapUiTinyMarginEnd"/>
							<ObjectStatus text="{modelDetail>/msrp} "/>-->
									<ObjectStatus text="{parts: [{path:'modelDetail>/msrp'},{path:'modelDetail>/msrp'}] , formatter: 'formatter.decimalFormatter'}"/>
								</items>
							</HBox>
							<HBox>
								<items>
									<!--<Label text="Dealer Net"/>
									<Label text=":" class="sapUiTinyMarginEnd"/>
									<ObjectStatus text="{modelDetail>/dealerNet}"/>-->
									<ObjectStatus text="{parts: [{path:'modelDetail>/dealerNet'},{path:'modelDetail>/dealerNet'}] , formatter: 'formatter.decimalFormatterDealer'}"/>
								</items>
							</HBox>
						</items>
					</VBox>
				</HBox>
			</VBox>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection title="Interior">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Interior">
						<uxap:blocks>
							<Table id="DetailtblInterior" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Exterior">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Exterior">
						<uxap:blocks>
							<Table id="DetailtblExterior" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Powertrain &amp; Mechanical">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Powertrain &amp; Mechanical">
						<uxap:blocks>
							<Table id="DetailtblpwrTrn" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Safety &amp; Convenience">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Safety &amp; Convenience">
						<uxap:blocks>
							<Table id="DetailtblSafety" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Infotainment">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Infotainment">
						<uxap:blocks>
							<Table id="DetailtblInfotainment" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Color Options">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Color Options">
						<uxap:blocks>
							<Table id="DetailtblColorOptions" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Dimensions &amp; Specs">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Dimensions &amp; Specs">
						<uxap:blocks>
							<Table id="DetailtblDimensions" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Option Packages">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Option Packages">
						<uxap:blocks>
							<Table id="DetailtblOptionPack" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="APX">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="APX">
						<uxap:blocks>
							<Table id="DetailtblAPX" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
				<content>
					<ToolbarSpacer/>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
					<Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
				</content>
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>