<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.toyota-canada.vehiclesGuideV3.controller.CompareDetailsOption"
	xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="false"
		class="sapUiSizeCompact">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectTitle="{modelArg>/moYear} {modelArg>/brand} {modelArg>/series} - Compare" objectSubtitle=""
				isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" showPlaceholder="true"
				objectImageURI="/build/uilibraries/content/static/image-canvas.svg">
				<uxap:navigationBar>
					<Bar>
						<contentLeft>
							<Button type="Back" press="_onFioriObjectPageHeaderPress"/>
						</contentLeft>
						<contentMiddle>
							<Title text="Compare Vehicle Details"/>
						</contentMiddle>
						<contentRight/>
					</Bar>
				</uxap:navigationBar>
				<uxap:actions>
					<Button text="Create Vehicle Guide" icon="sap-icon://pdf-attachment" iconFirst="false" type="Default" enabled="true"
						press="_onFioriObjectPageActionButtonPress">
						<layoutData>
							<OverflowToolbarLayoutData moveToOverflow="true"/>
						</layoutData>
					</Button>
				</uxap:actions>
				<uxap:breadCrumbsLinks/>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:headerContent>
			<VBox>
				<items>
					<HBox>
						<items>
							<HBox>
								<items>
									<HBox>
										<items>
											<Label text="Include Common Features" design="Standard" width="106px" required="false" textAlign="Right" textDirection="Inherit"
												visible="true" class="sapUiTinyMargin" wrapping="true"/>
											<Switch id="stdFeatSwitchId" change="onSwitchstateChange" state="false" customTextOff="On" customTextOn="Off" type="Default" enabled="true"
												visible="true" class="sapUiTinyMargin"/>
										</items>
									</HBox>
									<HBox width="100%" items="{path:'compareModel>/', templateShareable:true}">
										<items>
											<VBox class="sapUiLargeMarginBegin sapUiLargeMarginEnd">
												<items>
													<Title text="{compareModel>ENModelDesc} - ({compareModel>Model}) - SFX {compareModel>Suffix}" wrapping="true"/>
													<Text text="Model: {compareModel>ENModelDesc}" wrapping="true"></Text>
													<Text text="{parts: [{path:'compareModel>MSRP'},{path:'compareModel>MSRP'}] , formatter: 'formatter.decimalFormatter'}"></Text>
													<Text text="{parts: [{path:'compareModel>NETPRICE'},{path:'compareModel>NETPRICE'}] , formatter: 'formatter.decimalFormatterDealer'}"></Text>
													<!--	<Text text="Dealer Net: ${compareModel>NETPRICE}" wrapping="true"></Text>-->
												</items>
												<!--	<Text text="MSRP: ${compareModel>MSRP}"  formatter:format.formatter.decimalFormatter wrapping="true"></Text>-->
											</VBox>
										</items>
									</HBox>
								</items>
							</HBox>
						</items>
					</HBox>
				</items>
			</VBox>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection title="Interior">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Interior">
						<uxap:blocks>
							<Table id="tblInterior" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Exterior">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Exterior">
						<uxap:blocks>
							<Table id="tblExterior" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Powertrain &amp; Mechanical">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Powertrain &amp; Mechanical">
						<uxap:blocks>
							<Table id="pwrTrn" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Safety &amp; Convenience">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Safety &amp; Convenience">
						<uxap:blocks>
							<Table id="tblSafety" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Infotainment">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Infotainment">
						<uxap:blocks>
							<Table id="tblInfotainment" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Color Options">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Color Options">
						<uxap:blocks>
							<Table id="tblColorOptions" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Dimensions &amp; Specs">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Dimensions &amp; Specs">
						<uxap:blocks>
							<Table id="tblDimensions" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Option Packages">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Option Packages">
						<uxap:blocks>
							<Table id="tblOptionPackStat" items="{path:'tblModelOpt>/', templateShareable:true}" width="100%" growing="true" growingScrollToLoad="false"
								growingThreshold="30" mode="None">
								<columns>
									<Column minScreenWidth="Phone" width="50%">
										<header>
											<Text text=""/>
										</header>
									</Column>
									<Column minScreenWidth="Phone" width="50%">
										<header>
											<Text text="Option Packages"/>
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<ObjectIdentifier title="{tblModelOpt>Vehicle1}"
												text="{parts: [{path:'tblModelOpt>NETPRICE'},{path:'tblModelOpt>MSRP'}] , formatter: 'formatter.decimalFormatterDealerMSRP'}"/>
											<ObjectIdentifier text="{tblModelOpt>OptionPackages}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="APX">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="APX">
						<uxap:blocks>
							<Table id="tblAPX" width="100%" growing="true" growingScrollToLoad="false" growingThreshold="30" mode="None"></Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>