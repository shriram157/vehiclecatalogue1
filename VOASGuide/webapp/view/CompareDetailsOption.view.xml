											<Switch state="true" customTextOff="On" customTextOn="Off" type="Default" enabled="true" visible="true" class="sapUiTinyMargin"/>
										</items>
									</HBox>
									<HBox width="100%" items="{path:'compareModel>/', templateShareable:true}">
										<items>
											<VBox class="sapUiLargeMarginBegin sapUiLargeMarginEnd">
												<items>
												
													<Title text="{compareModel>Vehicle}"/>
													<Text text="Brand {compareModel>Brand}"></Text>
													<Text text="Model {compareModel>Model}"></Text>
													<Text text="MSRP {compareModel>MSRP}"></Text>
													<Text text="DealerNet {compareModel>NETPRICE}"></Text>
												</items>
											</VBox>
										</items>
									</HBox>
								</items>
							</HBox>
						</items>
					</HBox>
				</items>
			</VBox>
		</uxap:headerContent>
