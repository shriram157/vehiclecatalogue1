						</contentMiddle>
						<contentRight/>
					</Bar>
				</uxap:navigationBar>
				<uxap:actions>
					<Button text="Create Vehicle Guide" icon="sap-icon://pdf-attachment" iconFirst="false" type="Default" enabled="true"
